# Application Settings
APP_NAME="Document Processing Service"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# API Settings
API_PREFIX=/api
API_V1_PREFIX=/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Database Configuration
DATABASE_URL=postgresql://researcher:researcher_pass@localhost:5432/research_papers
DATABASE_ECHO=false  # Set to true to see SQL queries in logs

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_DECODE_RESPONSES=true

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf

# PDF Processing Settings
PDF_EXTRACTION_TIMEOUT=60  # seconds
MAX_PAGE_COUNT=500

# Service URLs (for Phase 4 - API Gateway)
VECTOR_SERVICE_URL=http://localhost:8002
LLM_SERVICE_URL=http://localhost:8003

# Security Settings (generate strong keys for production)
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here-optional

# LLM API Keys (for Phase 3)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Logging Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
